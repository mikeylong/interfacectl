{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://contracts.surfaces.local/surfaces.web.contract.schema.json",
  "title": "Surfaces Web Contract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "contractId",
    "version",
    "surfaces",
    "sections",
    "constraints"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri-reference"
    },
    "contractId": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "description": {
      "type": "string"
    },
    "surfaces": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/surface"
      }
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/section"
      }
    },
    "constraints": {
      "$ref": "#/$defs/constraints"
    }
  },
  "$defs": {
    "surface": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "displayName",
        "type",
        "requiredSections",
        "allowedFonts",
        "layout"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "displayName": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "web",
            "cli"
          ]
        },
        "requiredSections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)*$"
          },
          "uniqueItems": true
        },
        "allowedFonts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "layout": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "maxContentWidth"
          ],
          "properties": {
            "maxContentWidth": {
              "type": "number",
              "minimum": 1
            },
            "requiredContainers": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "uniqueItems": true
            }
          }
        }
      }
    },
    "section": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "intent",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(\\.[a-z0-9]+)*$"
        },
        "intent": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "motion"
      ],
      "properties": {
        "motion": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "allowedDurationsMs",
            "allowedTimingFunctions"
          ],
          "properties": {
            "allowedDurationsMs": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "integer",
                "minimum": 1
              },
              "uniqueItems": true
            },
            "allowedTimingFunctions": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 1
              },
              "uniqueItems": true
            }
          }
        }
      }
    }
  }
}

