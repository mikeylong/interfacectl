{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.surfaces.local/interfacectl.fix-summary.schema.json",
  "title": "interfacectl enforce fix summary",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "mode", "policy", "applied", "skipped", "errors"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "mode": { "type": "string", "enum": ["fix", "pr"] },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "fingerprint"],
      "properties": {
        "version": { "type": "string", "minLength": 1 },
        "fingerprint": { "type": "string", "pattern": "^[a-f0-9]{32,128}$" }
      }
    },
    "applied": {
      "type": "array",
      "items": { "$ref": "#/$defs/FixEntry" }
    },
    "skipped": {
      "type": "array",
      "items": { "$ref": "#/$defs/FixEntry" }
    },
    "errors": {
      "type": "array",
      "items": { "$ref": "#/$defs/FixError" }
    }
  },
  "$defs": {
    "FixEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ruleId", "path", "oldValue", "newValue", "confidence"],
      "properties": {
        "ruleId": { "type": "string", "minLength": 1 },
        "path": { "type": "string", "minLength": 1 },
        "oldValue": {},
        "newValue": {},
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "file": {
          "type": "string",
          "description": "Relative file path when applicable (no absolute paths)."
        },
        "lineDelta": {
          "type": "integer",
          "description": "Optional net line change count for patch summaries."
        }
      }
    },
    "FixError": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ruleId", "path", "message"],
      "properties": {
        "ruleId": { "type": "string", "minLength": 1 },
        "path": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 }
      }
    }
  }
}
