{
  "name": "@surfaces/interfacectl-cli",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "interfacectl": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:deps": "pnpm --filter @surfaces/interfacectl-validator run build",
    "build": "pnpm run build:deps && pnpm run clean && tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "validate": "node dist/index.js validate --root test/fixtures/minimal-project --contract test/fixtures/minimal-project/contracts/ui.contract.json",
    "pretest": "pnpm run build:deps && pnpm run build",
    "test": "node --test test/**/*.test.mjs"
  },
  "dependencies": {
    "@surfaces/interfacectl-validator": "^0.1.0",
    "commander": "^12.1.0",
    "globby": "^14.0.2",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "typescript": "^5.6.3"
  }
}

