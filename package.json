{
  "name": "interfacectl-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.20.0 || >=20.10.0"
  },
  "scripts": {
    "build": "pnpm -r --filter \"./packages/**\" run build",
    "clean": "pnpm -r run clean",
    "test": "pnpm -r --filter \"./packages/**\" run test",
    "verify": "bash scripts/verify-source-files.sh",
    "ci": "pnpm install --frozen-lockfile && pnpm run build && pnpm run test",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.19.27",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "@surfaces/interfacectl-validator": "link:packages/interfacectl-validator"
    }
  },
  "packageManager": "pnpm@10.26.2"
}

